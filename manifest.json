{
  "manifest_version": 3,
  "name": "ProShop Label Printer",
  "version": "1.0.0",
  "description": "Print 6 ProShop labels directly from Work Order pages.",
  "action": { "default_popup": "popup/popup.html" },
  "permissions": ["activeTab", "scripting", "storage", "notifications", "nativeMessaging"],
  "host_permissions": [
    "https://*/workorders/*",
    "https://*/proshop/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/print.css",
        "preview/preview.html",
        "preview/preview.css",
        "preview/preview.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
  "toggle-print-mode": {
    "suggested_key": {
      "default": "Ctrl+Shift+P",
      "mac": "Command+Shift+P"
    },
    "description": "Toggle between Preview and Silent print mode"
  }
},
  "background": {
    "service_worker": "background.js"
  }}

